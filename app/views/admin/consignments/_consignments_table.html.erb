<table class="index">
  <thead>
  	<tr>
  		<th><%= t("consignment_name") %></th>
  		<th></th>
  	</tr>
  </thead>
  <tbody>
    <% unless consignment.blank? %>
      <tr id="<%= dom_id(consignment, :sel)%>">
        <td><%= consignment.name %></td>
  	    <td class="actions">
          <%= image_tag "spinner.gif", :style => "display:none", :id => "#{dom_id(consignment, :rem_spinner)}" %>		                         
		      <%= link_to_remote icon('delete') + ' ' + t('remove'), 
		                         {:url => remove_admin_product_consignment_url(@product, consignment),
		                         :loading => "jQuery('##{dom_id(consignment, :rem_spinner)}').show()",
		                         :update => 'selected-consignment',
		                         :complete => "jQuery('##{dom_id(consignment, :sel)}').remove(); jQuery('##{dom_id(consignment, :rem_spinner)}').hide();"}, :class => 'iconlink' %>
  	    </td>        
      </tr>
    <% else %>
     <tr><td colspan="3"><%= t('none') %>.</td></tr>
    <% end %>
  </tbody>
</table>
